# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Gradle files
[*.gradle]
indent_style = space
indent_size = 2

# XML files (Android)
[*.{xml,axml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2

